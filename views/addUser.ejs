    <h1 class="mt-2 text-center">Add User</h1>

    <form action="/users/register" method="post" class="w-75 m-auto mt-4 text-center">
        <div class="row">
            <div class="col-sm-12 col-md-6 mt-4">
              <input required type="text" class="form-control" name="name" placeholder="Name" aria-label="First name">
            </div>
            <div class="col-sm-12 col-md-6 mt-4">
              <input required type="text" name="mobile" class="form-control" placeholder="mobile" aria-label="Last name">
            </div>
          </div>
        <div class="row">
            <div class="col-sm-12 col-md-6 mt-4">
              <input required type="text" name="equity" class="form-control" placeholder="Equity" aria-label="First name">
            </div>
            <div class="col-sm-12 col-md-6 mt-4">
              <input required type="email" name="email" class="form-control" placeholder="email" aria-label="Last name">
            </div>
          </div>
          <div class="mt-4">
            <input required type="text" name="role" class="form-control" placeholder="Role" aria-label="Role">
          </div>
          <div class="row">
            <div class="col-sm-12 col-md-6 mt-4">
              <input required name="password" type="password" class="form-control" placeholder="Password" aria-label="First name">
            </div>
            <div class="col-sm-12 col-md-6 mt-4">
              <input required name="cpassword" type="password" class="form-control" placeholder="CPassword" aria-label="Last name">
            </div>
          </div>

          <button class="btn btn-dark mt-5">Add User</button>
    </form>
